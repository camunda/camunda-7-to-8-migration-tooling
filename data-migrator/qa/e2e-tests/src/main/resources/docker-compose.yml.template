services:
  # Camunda 7 with Cockpit plugin
  camunda7:
    image: registry.camunda.cloud/cambpm-ee/camunda-bpm-platform-ee:7.24.1
    ports:
      - "8090:8080"
    environment:
      - DB_DRIVER=org.postgresql.Driver
      - DB_URL=jdbc:postgresql://postgres:5432/camunda7
      - DB_USERNAME=camunda
      - DB_PASSWORD=camunda
      - WAIT_FOR=postgres:5432
    volumes:
      # Mount the plugin JAR to Camunda's plugin directory
      - ../../plugins/cockpit/target/camunda-7-to-8-data-migrator-cockpit-plugin-${project.version}.jar:/camunda/webapps/camunda/WEB-INF/lib/camunda-7-to-8-data-migrator-cockpit-plugin.jar:ro
    depends_on:
      postgres:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/camunda/app/cockpit/default/"]
      interval: 10s
      timeout: 5s
      retries: 30
      start_period: 60s
    networks:
      - e2e-network

  # PostgreSQL for Camunda 7
  postgres:
    image: postgres:18
    environment:
      - POSTGRES_DB=camunda7
      - POSTGRES_USER=camunda
      - POSTGRES_PASSWORD=camunda
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U camunda -d camunda7"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - e2e-network

  # Data Migrator - runs migration to generate test data
  data-migrator:
    image: eclipse-temurin:21-jdk
    volumes:
      - ../../assembly/target/camunda-7-to-8-data-migrator-${project.version}.zip:/tmp/migrator.zip:ro
    working_dir: /app
    environment:
      - CAMUNDA_MIGRATOR_C7_DATA_SOURCE_JDBC_URL=jdbc:postgresql://postgres:5432/camunda7
      - CAMUNDA_MIGRATOR_C7_DATA_SOURCE_USERNAME=camunda
      - CAMUNDA_MIGRATOR_C7_DATA_SOURCE_PASSWORD=camunda
      - CAMUNDA_MIGRATOR_C7_DATA_SOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver
      - CAMUNDA_MIGRATOR_AUTO_DDL=true
      - CAMUNDA_MIGRATOR_SAVE_SKIP_REASON=true
      - CAMUNDA_CLIENT_MODE=self-managed
      - CAMUNDA_CLIENT_GRPC_ADDRESS=http://camunda8:26500
      - CAMUNDA_CLIENT_REST_ADDRESS=http://camunda8:8080
    command:
      - /bin/bash
      - -c
      - |
        set -e
        echo 'Extracting migrator distribution...'
        apt-get update -qq && apt-get install -y -qq unzip wget > /dev/null
        unzip -q /tmp/migrator.zip -d /app
        echo 'Downloading PostgreSQL driver...'
        wget -q https://jdbc.postgresql.org/download/postgresql-42.7.3.jar -O /app/configuration/userlib/postgresql.jar
        echo 'Starting data migration...'
        cd /app
        ./start.sh --runtime
        echo 'Migration completed - test data ready'
    depends_on:
      camunda7:
        condition: service_healthy
      camunda8:
        condition: service_healthy
    networks:
      - e2e-network

  camunda8: # Consolidated Zeebe + Operate + Tasklist - https://docs.camunda.io/docs/self-managed/setup/deploy/other/docker/#zeebe
    image: camunda/camunda:8.9.0-alpha1
    container_name: camunda8
    ports:
      - "26500:26500"
      - "9600:9600"
      - "8088:8080"
    restart: always
    healthcheck:
      test: [ "CMD-SHELL", "bash -c 'exec 3<>/dev/tcp/127.0.0.1/9600 && echo -e \"GET /actuator/health/status HTTP/1.1\r\nHost: localhost\r\n\r\n\" >&3 && head -n 1 <&3'" ]
      interval: 1s
      retries: 30
      start_period: 30s
    volumes:
      - zeebe:/usr/local/zeebe/data
    configs:
      - source: camunda8-config
        target: /usr/local/camunda/config/application.yaml
    networks:
      - e2e-network
    depends_on:
      elasticsearch:
        condition: service_healthy

  elasticsearch: # https://hub.docker.com/_/elasticsearch
    image: docker.elastic.co/elasticsearch/elasticsearch:${version.elasticsearch}
    container_name: elasticsearch
    ports:
      - "9200:9200"
      - "9300:9300"
    environment:
      - discovery.type=single-node
      - xpack.security.enabled=false
      # allow running with low disk space
      - cluster.routing.allocation.disk.threshold_enabled=false
      # Disable noisy deprecation logs, see https://github.com/camunda/camunda/issues/26285
      - logger.org.elasticsearch.deprecation="OFF"
    restart: unless-stopped
    healthcheck:
      test: [ "CMD-SHELL", "curl -f http://localhost:9200/_cat/health | grep -q green" ]
      interval: 1s
      retries: 30
      start_period: 30s
      timeout: 1s
    volumes:
      - elastic:/usr/share/elasticsearch/data
    networks:
      - e2e-network

configs:
  camunda8-config:
    content: |
      management.endpoints.configprops.show-values: always
      camunda:
        system:
          cpu-thread-count: "3"
          io-thread-count: "3"
        security:
          authentication:
            method: "basic"
            unprotectedApi: true
          authorizations:
            enabled: false
          initialization:
            users:
              - username: "demo"
                password: "demo"
                name: "Demo User"
                email: "demo@demo.com"
            defaultRoles.admin.users:
              - "demo"
        database.index.numberOfReplicas: 0 # Single node elasticsearch so we disable replication
        data:
          secondary-storage:
            type: elasticsearch
            elasticsearch:
              cluster-name: elasticsearch
              url: "http://elasticsearch:9200"

volumes:
  zeebe:
  elastic:

networks:
  e2e-network:
    driver: bridge
