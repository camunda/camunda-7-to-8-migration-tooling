<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

  <id>assembly</id>

  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>internal</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <excludes>
        <exclude>io.camunda:camunda-7-to-8-data-migrator-distro</exclude>
        <exclude>com.h2database:h2</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>configuration/userlib/</outputDirectory>
      <includes>
        <include>com.h2database:h2</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
      <source>${maven.multiModuleProjectDirectory}/CAMUNDA-LICENSE-1.0.txt</source>
      <outputDirectory/>
      <destName>LICENSE.TXT</destName>
      <filtered>false</filtered>
      <lineEnding>crlf</lineEnding>
    </file>
    <file>
      <source>${project.build.directory}/dependency/camunda-7-to-8-data-migrator-distro-${project.version}.jar</source>
      <outputDirectory>internal</outputDirectory>
      <destName>camunda-7-to-8-data-migrator.jar</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source/>
      <outputDirectory>configuration/resources</outputDirectory>
    </file>
    <file>
      <source>resources/application.yml</source>
      <outputDirectory>configuration/</outputDirectory>
    </file>
    <file>
      <source>resources/launcher.properties</source>
      <outputDirectory>internal</outputDirectory>
    </file>
    <file>
      <source>resources/start.sh</source>
      <filtered>true</filtered>
      <outputDirectory/>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>resources/start.bat</source>
      <filtered>true</filtered>
      <outputDirectory/>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>resources/README.txt</source>
      <filtered>true</filtered>
      <outputDirectory/>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>${maven.multiModuleProjectDirectory}/NOTICE.txt</source>
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
      <outputDirectory/>
    </file>
  </files>


</assembly>
