{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "description": "Ignore SNAPSHOT versions for all packages.",
      "matchPackageNames": ["*"],
      "allowedVersions": "!/.*-SNAPSHOT$/",
      "enabled": true
    },
    {
      "description": "Pin internal modules to current version",
      "matchPackagePrefixes": ["io.camunda:camunda-7-to-8-data-migrator", "io.camunda:camunda-7-to-8-migration-tooling-root"],
      "enabled": false
    },
    {
      "description": "Disable updates for code-conversion modules",
      "matchPackagePrefixes": ["io.camunda:camunda-7-to-8-rewrite-recipes"],
      "enabled": false
    },
    {
      "description": "Automerge all updates with green CI.",
      "matchPackageNames": [
        "*"
      ],
      "automerge": true,
      "addLabels": [
        "automerge"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": false
  }
}
